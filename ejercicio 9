public class Main {

	public static void main(String[] args) {
		
		Cliente cliente = new Cliente();
		cliente.nombre = "Diana";
		cliente.edad = 37;
		cliente.telefono = 465466154;
		cliente.credito = 200;
		
	
		System.out.println("Mi nombre es " + cliente.nombre + " tengo " + cliente.edad + " , mi numero de telefono es " + cliente.telefono + 
		       " y mi credito es "  + cliente.credito + " $ ");
		
	    Trabajador trabajador = new Trabajador(); 
	    trabajador.nombre = "Maria";
		  trabajador.edad = 25;
		  trabajador.telefono = 574846545;
	    trabajador.salario = 125.36;
        
     System.out.println("Mi nombre es " + trabajador.nombre + " tengo " + trabajador.edad + " , mi numero de telefono es " + trabajador.telefono
            + " y mi salario es " + trabajador.salario + " $ " );  
        
	}   
}


class Persona{
    String nombre;
    int edad;
    int telefono;
}

class Cliente extends Persona {
    int credito;
}

class Trabajador extends Persona {
    double salario;
}
